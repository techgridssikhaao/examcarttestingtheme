<div class="main-row {{ section.settings.layout }} {% if section.settings.fullwidth == true %}full-width{% endif  %}{% if section.settings.background == true %} background-full {% endif  %}"{% if section.settings.image != blank %}style="background-image: url('{{ section.settings.image | img_url: 'master' }}');" {% endif %} data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include section.settings.layout %}
          </div>
        </div>
      </div>
    </div> 
  </div>
</div> 
{% schema %}
{
  "name": "Testimonial",
  "settings": [
	{
        "type": "select",
        "id": "layout",
        "label": "Select layout design",
        "options": [
          {
            "value": "testimonials",
            "label": "Design 1"
          }
        ]	
      },
	{
      "type": "header",
      "content": "Testimonial"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "WHAT OUR CLIENTS SAY"
	},
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image",
      "info": "Testimonial area background image"
    },
	{
      "type": "checkbox",
      "id": "fullwidth",
      "label": "Set Div fullwidth?",
      "default": true
    },
	{
      "type": "checkbox",
      "id": "background",
      "label": "Add Background",
      "default": true
    }
  ],
    "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial slide",
      "settings": [
		{
          "type": "text",
          "id": "title",
          "label": "Testimonial Title"
        },
		{
          "type": "textarea",
          "id": "description",
          "label": "Testimonial Text"
        },
		{
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "Customer Image"
        },
		{
          "type": "text",
          "id": "author",
          "label": "Testimonial Author"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Testimonial section",
    "category": "Feature Sections",
	"blocks": [
      {
        "type": "testimonial"
      },
      {
        "type": "testimonial"
      }
    ]
  }]
}
{% endschema %}