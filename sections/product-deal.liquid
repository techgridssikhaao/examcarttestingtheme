<div class="main-row {% if section.settings.fullwidth == true %}fluid-width {% endif  %} {% if section.settings.background == true %} background-full {% endif  %}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include section.settings.products_deal_layout %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Deal of the day",
  "max_blocks": 6,
  "settings": [
    {
      "type": "header",
      "content": "Select the collection to show products from"
    },
    {
      "type": "select",
      "id": "products_deal_layout",
      "label": "Select section layout",
      "options": [
        {
          "value": "products-deal",
          "label": "Design 1"
        },
        {
          "value": "products-deal2",
          "label": "Design 2"
        }
      ]
    },
	{
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
	  "default": "Product Deals"
    },
    {
      "type": "checkbox",
      "id": "fullwidth",
      "label": "Set Div fullwidth?",
      "default": false
    },
    {
      "type": "range",
      "id": "no_of_products",
      "label": "No of products in a row",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "product_grid_img_carousel",
      "label": "Slide All images in product grid?",
      "default": false,
      "info": "Used for Product grid carousel enable\/disable"
    },
	{
        "type": "checkbox",
        "id": "background",
        "label": "Add Background",
        "default": false
    }
  ],
  "blocks": [
    {
      "type": "deal",
      "name": "deal product",
      "settings": [
        {
          "type": "product",
          "id": "product_deal",
          "label": "Product",
          "info": "To add deal shortcode to the product, kindly check the video tutorial on [this link](https:\/\/youtu.be\/EOtvn-n94rM?list=PLvJCnPMUAdwrSvIt6G6Rmoc7f5x6Vv2p0&t=245)"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Deals section",
    "category": "Collection",
    "blocks": [
      {
        "type": "deal"
      },
      {
        "type": "deal"
      }
    ]
  }]
}
{% endschema %}