<div class="main-row {% if section.settings.fullwidth == true %}full-width{% endif  %}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include section.settings.layout %}         
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Brands section",
  "class": "index-section index-section--flush",
  "max_blocks": 8,
  "settings": [
      {
        "type": "select",
        "id": "layout",
        "label": "Select layout design",
        "options": [
          {
            "value": "brands",
            "label": "Design 1"
          }
        ]	
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Our brands"
      },
      {
         "type": "checkbox",
         "id": "fullwidth",
         "label": "Set Div fullwidth?",
         "default": false
      }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image brand",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "brand image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
		}
      ]
    }
  ],
  "presets": [{
    "name": "Brands section",
    "category": "Feature Sections",
    "blocks": [
      {
        "type": "image"
      },
      {
        "type": "image"
      }
    ]
  }]
}
{% endschema %}
