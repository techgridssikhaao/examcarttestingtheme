<div class="row-{{section.id}} {% if section.settings.fullwidth == true %}full-width{% endif  %}" data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div id="cmsblock-33" class="cmsblock">
          <div class='description'>
            <div class="our_story1">
              <div class="static_video1" data-aos="fade-zoom-in" data-aos-easing="ease-in-sine" data-aos-delay="100" data-aos-anchor-placement="top-top">
                <img src="{% if section.settings.image != blank %}{{ section.settings.image | img_url: '1920x601' }}{% else %} {{ 'videobox.jpg' | asset_img_url: '1920x601' }} {% endif %}" class="img_static1" alt="">
                <div id="cms_play1" class="{{section.id}}"><img src="{{ 'playing_video.png' | asset_url }}" alt=""></div>
              </div>
            </div>
            <script>// <![CDATA[
              $(document).ready(function(){
                $('#cms_play1.{{section.id}}').click(function(){
                  $(this).hide('fast');

                  {% if section.settings.video_type == 'youtube' %}
                  $('.static_video1').append('<iframe class="added_video1" src="https://www.youtube.com/embed/{{ section.settings.video_src }}?rel=0&showinfo=0&autoplay={{ section.settings.video_autoplay }}" frameborder="0" allowfullscreen></iframe>');
                                             {% elsif section.settings.video_type == 'vimeo' %}
                                             $('.static_video1').append('<iframe class="added_video1" src="https://player.vimeo.com/video/{{ section.settings.video_src }}?color=ffffff&title=0&byline=0&portrait=0&autoplay={{ section.settings.video_autoplay }}" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>');
                                             {% elsif section.settings.video_type == 'mp4' %}
                                             $('.static_video1').append('<video class="added_video1" controls autoplay width="100%" height="100%" poster="https://via.placeholder.com/1920x850/ffffff/ffffff" ><source src="{{ section.settings.video_src }}" type="video/mp4"></video>');
                                             {% endif %}
                                             });
                                             });
                                             // ]]>
            </script>																																																																																										
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
   "name": "Video Box Section",
   "settings": [
      {
         "type": "image_picker",
         "id": "image",
         "label": "Image",
         "info": "1920 x 650px recommended for preload image"
      },
      {
         "type": "select",
         "id": "video_type",
         "label": "Select video type",
         "options": [
            {
               "value": "youtube",
               "label": "Youtube"
            },
            {
               "value": "vimeo",
               "label": "Vimeo"
            },
            {
               "value": "mp4",
               "label": "Mp4"
            }
         ],
         "default": "youtube"
      },
      {
         "type": "text",
         "id": "video_src",
         "label": "Video Src",
         "default": "bLwl0gRbyrk",
         "info": "Add src id for youtube/vimeo and full link for video file"
      },
      {
         "type": "checkbox",
         "id": "video_autoplay",
         "label": "Autoplay",
         "default": true
      },
	  {
         "type": "checkbox",
         "id": "fullwidth",
         "label": "Set Div fullwidth?",
         "default": true
      }
   ],
   "presets": [
      {
         "name": "VideoBox",
         "category": "Image"
      }
   ]
}
{% endschema %}
