{% paginate blog.articles by section.settings.no_articles %}
  <div class="container">
    {% include 'breadcrumb' %}
  </div>

  <div class="container">
    <div class="main">
      <div class="row">
        <div id="content" class="col-sm-12">
          <h1>{{ 'blogs.title' | t }}</h1>
          <div class="article-page">
            {% for article in blog.articles %}
              <a href="{{ article.url }}">
                <div
                  id="blogCard"
                  class="col-lg-5 col-sm-6 col-md-6  "
                  style="border:1px solid #cecece;border-radius: 10px;margin:0.5%"
                >
                  <div
                    class="row container-fluid "
                    style="display: flex;"
                  >
                    <div class="trapezoid">
                      <h1 class="welcomeText">{{ article.updated_at | date: '%d %B %Y' }}</h1>
                    </div>
                    <p
                      class=""
                      style="margin: 5px;"
                    >
                      <b style="color:#62ab00;"> </b>
                    </p>
                  </div>
                  <div class="">
                    <div class="row" style="margin-top: 5px;display:flex">
                      <div
                        id="imgid"
                        class="col-sm-3 col-lg-4 col-md-3 px-0"
                        style="padding-bottom:1%"
                      >
                        <img
                          style="border-radius:10px;margin-top:5px"
                          src="{{ article.image.src | img_url: '412x240' }}"
                          class="img-fluid"
                        >
                      </div>
                      <div class="col-sm-8 col-lg-8 col-md-8">
                        <h4 id="trun" style="">
                          <b>{{ article.title }}</b>
                        </h4>

                        <h5 id="trun" style="">
                          {% if section.settings.show_summary %}
                            <div style="padding: 0px 0 0px;">
                              {% if article.excerpt.size > 0 %}
                                <p>{{ article.excerpt | truncatewords: section.settings.blog_summary_words, '' }}</p>
                              {% else %}
                                <p>
                                  {{
                                    article.content
                                    | strip_html
                                    | truncatewords: section.settings.blog_summary_words, ''
                                  }}
                                </p>
                              {% endif %}
                            </div>
                          {% endif %}
                        </h5>
                        <h5 style="color:#62ab00;"><b>Read More...</b></h5>
                      </div>
                    </div>
                  </div>
                </div>
              </a>
              <!--
                <div class="article-layout article-list">
                  <div class="article-item {% cycle 'odd','even' %}">
                    <div class="article-item-inner">
                      <div class="article-intro">
                        <div class="intro-content">
                          {% if article.image %}
                          <a href="{{ article.url }}">
                            <img class=" lazy" src="{{ article.image.src | img_url: '412x240' }}" alt="{{ article.title }}">
                          </a>
                          {% endif %}
                          <div class="article-name">
                            <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
                          </div>
                          <p class="articledate">
                            <time datetime="{{ article.published_at }}">{{ article.published_at | date: "%d/%m/%Y" }}</time>
                            | {{ article.author }}
                          </p>
                          {% if section.settings.show_summary %}
                          <div style="padding: 20px 0 10px;">
                            {% if article.excerpt.size > 0 %}
                            <p>{{ article.excerpt | truncatewords: section.settings.blog_summary_words,"" }}</p>
                            {% else %}
                            <p>{{ article.content | strip_html | truncatewords: section.settings.blog_summary_words,"" }}</p>
                            {% endif %}
                          </div>
                          {% endif %}
                        </div>
                      </div>
                      <a class="readmore-page" href="{{ article.url }}">{{ 'blogs.article.readmore' | t }}</a>
                    </div>
                  </div>
                </div>
              -->
            {% endfor %}
          </div>
          {% if paginate.pages > 1 %}
            {% include 'pagination' %}
          {% endif %}
        </div>
      </div>
    </div>
  </div>
{% endpaginate %}

{% schema %}
{
"name": "Blog Page",
"settings": [
{
"type": "text",
"id": "no_articles",
"label": "No of articles to show (per page)",
"default": "5"
},
{
"type": "checkbox",
"id": "show_summary",
"label": "Show Summary in list view",
"default": true
},
{
"type": "text",
"id": "blog_summary_words",
"label": "Words count on summary area",
"default": "30"
}
],
"blocks": [],
"presets": []
}
{% endschema %}
