<div class="main-row {% if section.settings.fullwidth == true %}full-width{% endif  %} " data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include section.settings.layout %}         
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
   "name": "Blog section",
   "class": "index-section index-section--flush",
   "max_blocks": 3,
   "settings": [
      {
         "type": "select",
         "id": "layout",
         "label": "Select layout design",
         "options": [
            {
               "value": "blog-1",
               "label": "Design 1"
            }
         ]
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Main Heading",
        "default": "Latest Blogs"
      },
      {
         "type": "blog",
         "id": "blog",
         "label": "Blog"
      },
      {
        "type": "range",
        "id": "items",
        "label": "No of items to show",
        "min": 2,
        "max": 5,
        "step": 1,
        "default": 2
      },
      {
         "type": "checkbox",
         "id": "fullwidth",
         "label": "Set Div fullwidth?",
         "default": true
      }
   ],
   "blocks": [],
   "presets": [
      {
         "name": "Blog section",
         "category": "Feature Sections"
      }
   ]
}
{% endschema %}
