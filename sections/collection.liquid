<div class="main-row {% if section.settings.collection_layout == 'feature-carousal2' %} bestseller-full {% endif %}{% if section.settings.fullwidth == true %}fluid-width {% endif  %} {% if section.settings.background == true %} background-full {% endif  %}"{% if section.settings.top_margin %} style="margin-top: 80px;"{% endif %} {% if section.settings.bg_image != blank %}style="background-image: url('{{ section.settings.bg_image | img_url: 'master' }}');"{% endif %} data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          <div class="sub-col col-sm-12 col-md-12">
            {% include section.settings.collection_layout %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
"name": "Featured collection",
"class": "index-section",
  "settings": [
    {
      "type": "select",
      "id": "collection_layout",
      "label": "Select section layout",
      "options": [
        {
        "value": "feature-carousal",
        "label": "Design 1"
        },
		{
        "value": "feature-carousal2",
        "label": "Design 2"
        },
		{
        "value": "feature-carousal3",
        "label": "Design 3"
        }
      ]
    },
	{
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "FEATURED PRODUCTS"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Collection image",
      "info": "Used in Design2"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Image URL",
      "info": "Used in Design2"
    },
    {
      "id": "collection",
      "type": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "listing_rows",
      "label": "No of product rows",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 1
    },
    {
      "type": "range",
      "id": "no_of_products",
      "label": "No of products in a row",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 4
    },
    {
      "type": "range",
      "id": "products_tab_count",
      "label": "No of products to show",
      "min": 1,
      "max": 99,
      "step": 1,
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "fullwidth",
      "label": "Set Div fullwidth?",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "product_grid_img_carousel",
      "label": "Slide All images in product grid?",
      "default": false,
      "info": "Used for Product grid carousel enable\/disable"
    },
	{
        "type": "checkbox",
        "id": "background",
        "label": "Add Background",
        "default": true
    },
    {
      "type": "checkbox",
      "id": "top_margin",
      "label": "Add top margin?",
      "info": "White empty space above section",
      "default": false
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Add Background Image",
      "info": "background image"
    }
  ],
  "presets": [
    {
    "name": "Featured collection",
    "category": "Collection"
    }
  ]
}
{% endschema %}
