<div class="main-row {{section.settings.products_tab_layout}} {% if section.settings.fullwidth == true %}full-width cust{% endif  %} {% if section.settings.background == true %} background-full {% endif  %}"{% if section.settings.top_margin %} style="margin-top: 80px;"{% endif %} data-section-id="{{ section.id }}">
  <div class="container">
    <div class="row">
      <div class="main-col col-sm-12 col-md-12">
        <div class="row sub-row">
          {% include section.settings.products_tab_layout %}
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Collection Tabs",
  "class": "index-section",
	 "settings": [
      {
        "type": "header",
        "content": "Select the collection to show products from"
      },
      {
        "type": "select",
        "id": "products_tab_layout",
        "label": "Select section layout",
        "options": [
          {
            "value": "products-tab1",
            "label": "Design 1"
          },
		  {
            "value": "products-tab2",
            "label": "Design 2"
          },
		  {
            "value": "products-tab3",
            "label": "Design 3"
          },
		  {
            "value": "products-tab4",
            "label": "Design 4"
          },
		  {
            "value": "products-tab5",
            "label": "Design 5"
          }
        ]
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Featured collection"
      },
	  {
        "type": "checkbox",
        "id": "fullwidth",
        "label": "Set Div fullwidth?",
        "default": false
      },
      {
        "type": "collection",
        "id": "products_tab_collection1",
        "label": "Collection for Tab 1",
        "info": "should be a deals collection for design 2"
      },
      {
        "type": "collection",
        "id": "products_tab_collection2",
        "label": "Collection for Tab 2"
      },
      {
        "type": "collection",
        "id": "products_tab_collection3",
        "label": "Collection for Tab 3"
      },
      {
        "type": "collection",
        "id": "products_tab_collection4",
        "label": "Collection for Tab 4"
      },
      {
        "type": "collection",
        "id": "products_tab_collection5",
        "label": "Collection for Tab 5"
      },
      {
        "type": "range",
        "id": "listing_rows",
        "label": "No of product rows",
        "info": "Set to 3 for design 1. Not required in design 2",
        "min": 1,
        "max": 4,
        "step": 1,
        "default": 1
      },
	  {
	    "type": "range",
    	"id": "no_of_products",
    	"label": "No of products in a row",
        "info": "Set to 3 for design 1. Not required in design 2",
        "min": 1,
        "max": 6,
        "step": 1,
        "default": 4

      },
      {
        "type": "range",
        "id": "products_tab_count",
        "label": "No of products to show",
        "min": 1,
        "max": 99,
        "step": 1,
        "default": 8
      },
      {
        "type": "checkbox",
        "id": "product_grid_img_carousel",
        "label": "Slide All images in product grid?",
        "default": false,
        "info": "Used for Product grid carousel enable\/disable"
      },
      {
        "type": "image_picker",
        "id": "image1",
        "label": "Collection image 1",
        "info": "Used in Design2 onwards"
      },
      {
        "type": "url",
        "id": "link1",
        "label": "Image URL 1",
        "info": "Used in Design2 onwards"
      },
      {
        "type": "image_picker",
        "id": "image2",
        "label": "Collection image 2",
        "info": "Used in Design5"
      },
      {
        "type": "url",
        "id": "link2",
        "label": "Image URL 2",
        "info": "Used in Design5"
      },
      {
        "type": "checkbox",
        "id": "background",
        "label": "Add Background",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "top_margin",
        "label": "Add top margin?",
        "info": "White empty space above section",
        "default": false
      }
    ],
  "presets": [
    {
      "name": "Collection Tabs",
      "category": "Collection"
    }
  ]
}
{% endschema %}
