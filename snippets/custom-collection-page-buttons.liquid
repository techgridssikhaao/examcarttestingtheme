<style>
                                  .textBox{

                                  height: 1em;
                                    display: flex;
                                    align-items: center;
                                    justify-content: center;
                                    gap: 2em;

                                  }

                                  .buy-now-row{

                                    display: flex;
                                    align-items: center;
                                    justify-content: center;
                                    margin-bottom: .8em;
                                  }

                                  .buy-now-row button{

                                    background-color: #A82B0B;
                                  }
                                          .buy-now-icon{
                                           width: 50px;
                                            height: 50px;
                                            background-color: #A82B0B;
                                            border-radius: 50%;
                                            z-index: 1;
                                            position: relative;
                                            left: 1.1em;
                                            padding: 0;


                                          }
                                  .buy-now-text{

                                      display: flex;
                      justify-content: center;
                                    align-items: center;

                                    background-color: #A82B0B;

                                    padding: .6em 1em;

                                  }

                  .more-buttons-div{
                                   height: 4em; display: flex; align-items: center; justify-content: center; gap: 2px

                  }
      .more-button-disabled{

        opacity: .5;
            cursor: not-allowed;
      }

                  .more-button{
      padding: .5em .5em; color: #004AAD; background-color: white;     display: flex;
                      justify-content: center; align-items: center;

                  }

    .button-icons{
  height: 2em;
      width: 2em;
    margin-right: .3em;
    }
</style>

<div class="buy-now-row">
  <!-- <button class="buy-now-icon">lo</button> -->
  {% if sold_out %}
    <div class="label-product label_sale l_sold">
      <span>Available on Amazon</span>
      <!-- <span>{{ 'products.product.sold_out' | t }}</span> -->
    </div>
  {% else %}
    <button
      onclick="processCollectionBuyNowPopup(this)"

      data-product-id="{{ product.variants.first.id }}"
      data-product-available="{{ product.variants.first.available }}"
      data-product-page="{{ product.url }}"

      class="buy-now-text {% if sold_out %} more-button-disabled  {% endif %}"
    >
      <img class="button-icons" src="{{ 'Buy-now-button.svg' | asset_url }}" loading="lazy" alt="Examcart logo">
      BUY NOW
    </button>
  {% endif %}
</div>
<div class="textBox">
  <div
    class="horizontal-line"
    style="
        width:30%;

        background-color: gray;
      height:1px;
    "
  ></div>
  <div
    style="                                 color: #ADA9A9;"
    class="text-between-lines"
  >
    Extra Link
  </div>
  <div
    class="horizontal-line"
    style="
                            background-color: gray;
        width:30%;
      height:1px;
    "
  ></div>
</div>
<div
  class="more-buttons-div"
>
  <button
    class="more-button  {% if sold_out %} more-button-disabled  {% endif %}"
    onclick="processAddtoCartPopup(this)"

    data-toggle="tooltip"
    data-product-id="{{ product.variants.first.id }}"
    data-product-available="{{ product.variants.first.available }}"
    data-product-page="{{ product.url }}"
    data-loading-text="{{ 'products.product.loading' | t }}"
    title="{{ 'products.product.add_to_cart' | t }}"
    {% if sold_out %}
      disabled
    {% endif %}
  >
    <svg
      style="font-size: 2.5rem;"
      xmlns="http://www.w3.org/2000/svg"
      height="1em"
      viewBox="0 0 576 512"
    >
      <!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><style>svg{fill:#004aad}</style><path d="M24 0C10.7 0 0 10.7 0 24S10.7 48 24 48H69.5c3.8 0 7.1 2.7 7.9 6.5l51.6 271c6.5 34 36.2 58.5 70.7 58.5H488c13.3 0 24-10.7 24-24s-10.7-24-24-24H199.7c-11.5 0-21.4-8.2-23.6-19.5L170.7 288H459.2c32.6 0 61.1-21.8 69.5-53.3l41-152.3C576.6 57 557.4 32 531.1 32H360V134.1l23-23c9.4-9.4 24.6-9.4 33.9 0s9.4 24.6 0 33.9l-64 64c-9.4 9.4-24.6 9.4-33.9 0l-64-64c-9.4-9.4-9.4-24.6 0-33.9s24.6-9.4 33.9 0l23 23V32H120.1C111 12.8 91.6 0 69.5 0H24zM176 512a48 48 0 1 0 0-96 48 48 0 1 0 0 96zm336-48a48 48 0 1 0 -96 0 48 48 0 1 0 96 0z"/>
    </svg>
    Add to Cart
  </button>
  <button
    class="more-button {% if pdf == '' %} more-button-disabled  {% endif %}"
    onclick="processPdflink(this)"
    data-pdflink="{{ pdf }}"
    id="getPdf"
    type="button"
    data-toggle="tooltip"
    data-loading-text="{{ 'products.product.loading' | t }}"
    title="Download Sample PDF"
    {% if pdf == '' %}
      disabled
    {% endif %}
  >
    <svg style="font-size: 2.5rem;" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
      <!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><style>svg{fill:#004aad}</style><path d="M0 64C0 28.7 28.7 0 64 0H224V128c0 17.7 14.3 32 32 32H384V304H176c-35.3 0-64 28.7-64 64V512H64c-35.3 0-64-28.7-64-64V64zm384 64H256V0L384 128zM176 352h32c30.9 0 56 25.1 56 56s-25.1 56-56 56H192v32c0 8.8-7.2 16-16 16s-16-7.2-16-16V448 368c0-8.8 7.2-16 16-16zm32 80c13.3 0 24-10.7 24-24s-10.7-24-24-24H192v48h16zm96-80h32c26.5 0 48 21.5 48 48v64c0 26.5-21.5 48-48 48H304c-8.8 0-16-7.2-16-16V368c0-8.8 7.2-16 16-16zm32 128c8.8 0 16-7.2 16-16V400c0-8.8-7.2-16-16-16H320v96h16zm80-112c0-8.8 7.2-16 16-16h48c8.8 0 16 7.2 16 16s-7.2 16-16 16H448v32h32c8.8 0 16 7.2 16 16s-7.2 16-16 16H448v48c0 8.8-7.2 16-16 16s-16-7.2-16-16V432 368z"/>
    </svg>
    <span>View PDF</span>
  </button>
  <button
    class="more-button {% if blog == '' %} more-button-disabled  {% endif %}"
    data-bloglink="{{ blog }}"
    data-toggle="tooltip"
    data-loading-text="{{ 'products.product.loading' | t }}"
    title="Read Blog"
    onclick="processBlogLink(this)"
    {% if blog == '' %}
      disabled
    {% endif %}
  >
    <svg style="font-size: 2.5rem;" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512">
      <!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><style>svg{fill:#004aad}</style><path d="M215.4 96H144 107.8 96v8.8V144v40.4 89L.2 202.5c1.6-18.1 10.9-34.9 25.7-45.8L48 140.3V96c0-26.5 21.5-48 48-48h76.6l49.9-36.9C232.2 3.9 243.9 0 256 0s23.8 3.9 33.5 11L339.4 48H416c26.5 0 48 21.5 48 48v44.3l22.1 16.4c14.8 10.9 24.1 27.7 25.7 45.8L416 273.4v-89V144 104.8 96H404.2 368 296.6 215.4zM0 448V242.1L217.6 403.3c11.1 8.2 24.6 12.7 38.4 12.7s27.3-4.4 38.4-12.7L512 242.1V448v0c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64v0zM176 160H336c8.8 0 16 7.2 16 16s-7.2 16-16 16H176c-8.8 0-16-7.2-16-16s7.2-16 16-16zm0 64H336c8.8 0 16 7.2 16 16s-7.2 16-16 16H176c-8.8 0-16-7.2-16-16s7.2-16 16-16z"/>
    </svg>
    Notification
  </button>
</div>
