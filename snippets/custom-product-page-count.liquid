<style></style>
{% assign pag = '' %}
{% for tag in product.tags %}
  {% if tag contains 'pages' %}
    {% assign pages = tag | replace: 'pages\', '' %}
  {% endif %}
{% endfor %}
<div>
  <span style="color: #8ABD1E; font-weight: bold;">Book code: </span>
  <span style="color: #A6A6A6; "> {{ item.sku }} |</span>
  {% if pages != '' %}
    <span style="color: #8ABD1E; font-weight: bold;">Pages: </span>
    <span style="color: #A6A6A6; ">{{ pag }}</span>
  {% endif %}
  <!--
    Category:
    <span style="color: #A6A6A6; ">{{ catvar }}</span>
    Sub-Category:
    <span style="color: #A6A6A6; ">{{ subcatvar }}</span>
  -->
</div>
