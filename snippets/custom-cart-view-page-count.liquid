
{% assign pages = '' %}
{% for tag in item.product.tags %}
  {% if tag contains 'pages' %}
    {% assign pages = tag | replace: 'pages\', '' %}
  {% endif %}
{% endfor %}
<div>
  <span style="color: #8ABD1E;">Book code: </span>
  <span style="color: #A6A6A6; "> {{ item.sku }} |</span>
  {% if pages != '' %}
    <span style="color: #8ABD1E;">Pages: </span>
    <span style="color: #A6A6A6; ">{{ pages }}</span>
  {% endif %}

</div>