                <div class="flex">
                    <h3>Order Date:</h3> <span>${data.data.customers.edges[0].node.orders.edges[i].node.createdAt}</span>
                </div>
                <div class="flex">
                    <h3>Payment Status:</h3> <span>${data.data.customers.edges[0].node.orders.edges[i].node.displayFinancialStatus}</span>
                </div>
                <div class="flex">
                    <h3>Order Status:</h3> <span>#30789</span>
                </div>
                <div class="flex">
                    <h3>Tracking Id:</h3> <span>#30789</span>
                </div>
            </div>
            <button>Invoice</button>
            <button>Refund</button>
            <button>Track</button>
        </div>`
    }
    home.innerHTML=getOrderHtml
   })









