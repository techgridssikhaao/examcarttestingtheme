<style>
    .owl-stage-outer{
    height :500px;
    }
  .date-time-post{
    width: 100%;
  }
  .date-post{
    width: 100%;
  }
  .content-inner{
    height: 180px;
  }
  .articles-name{
    height: 80px;
    margin-bottom: 2em;
  }
  .read-more{
    text-align: center;
    margin:0 !important;
    color: #fff !important;
  }
    .recent-title{
    border-bottom:1px solid #e5e5e5 !important;
   }
    .recent-title-heading{
      border-bottom: 2px solid #62ab00;
      padding-bottom: 1em !important;
    }
    .read-more-btn{
      background-color:#62ab00;
      display: block;
      margin:auto;
      padding: .5em 1em !important;
      margin-top: 2em !important;
      border: none;
      border-radius: 20px;
    }
    .menu-recent .read-more:after {
      color: #fff !important;
    }
    @media(max-width:500px){
      .articles-name {
      height: 50px;
      margin-bottom: 1em;
      }
      .content-inner{
        height: 150px
      }
      .articles-inner{
      margin:0 1em;
    }
    }
</style>
<div id="blog_home" class="menu-recent module-nav2">
  <div class="">
    <div class="blog-title module-title">
      {% if section.settings.heading != blank %}
        <h2>{{ section.settings.heading }}</h2>
      {% endif %}
    </div>

    <div class="owl-container">
      <div class="articles-container owl-carousel owl-theme">
        {% for article in blogs[section.settings.blog].articles %}
          <div class="row">
            <!-- row_items -->
            <div class="articles-inner">
              <p class="date-time-post">
                <time datetime="{{ article.published_at | date }}">
                  <span>
                    {{ article.published_at | date: '<span class="date-post">%d %b 2023</span>' }}
                  </span>
                </time>
              </p>
              <div class="articles-image">
                <a class="" href="{{ article.url }}">
                  <img src="{{ article.image.src | img_url: '270x178' }}" alt="{{ article.title }}">
                  <span class="icon-view"></span>
                </a>
              </div>
              <div class="aritcles-content">
                <div class="content-inner">
                  <a class="articles-name" href="{{ article.url }}" style="font-size:15px">{{ article.title }}</a>

                  <!-- <p class="author-name">{{ 'blogs.article.by' | t }} <span>{{ article.author }}</span></p> -->
                  <!--
                    <div class="articles-intro">
                      {% if article.excerpt.size > 0 %}
                      {{ article.excerpt | truncatewords: 5 }}
                      {% else %}
                      {{ article.content | strip_html | truncatewords: 5 }}
                      {% endif %}
                    </div>
                  -->
                  <button class="read-more-btn">
                    <a class="read-more" href="{{ article.url }}">{{ 'blogs.article.readmore' | t }}</a>
                  </button>
                </div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    {% comment %}
      <div class="swiper-container">
        <div class="swiper-wrapper">
          {% for article in blogs[section.settings.blog].articles %}
            <div class="swiper-slide">
              <div class="articles-inner">
                <div class="articles-image">
                  <a href="{{ article.url }}">
                    <img src="{{ article.image.src | img_url: '270x178' }}" alt="{{ article.title }}">
                    <span class="icon-view"></span>
                  </a>
                </div>
                <div class="aritcles-content">
                  <div class="content-inner">
                    <div class="box-name">
                      <p class="date-time-post">
                        <time datetime="{{ article.published_at | date }}">
                          <span>
                            {{
                              article.published_at
                              | date: '<span class="date-post">%d</span><span class="month-post">%b</span>'
                            }}
                          </span>
                        </time>
                      </p>
                      <a class="articles-name" href="{{ article.url }}" style="font-size:15px">{{ article.title }}</a>
                    </div>
                    <a class="read-more" href="{{ article.url }}">{{ 'blogs.article.readmore' | t }}</a>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endcomment %}
  </div>
</div>

<script>
    $(document).ready(function() {
      $(".articles-container").owlCarousel({
        autoPlay :  false ,
        items : {{ section.settings.items }},
        margin: 30,
        loop: false,
        navSpeed : 1000,
        dotsSpeed : 1000,
        autoplaySpeed : 1000,
        nav :  false ,
        dots :  true ,

        responsive:{
        0:{
        items: 1,
        nav: false
      },
                                           480:{
                                           items: 2,
                                           nav: false
                                           },
                                           768:{
                                           items: 3
                                           },
                                           992:{
                                           items: 4
                                           },
                                           1200:{
                                           items: 5
  //                                          {{ section.settings.items }}
                                           }
                                           }
                                           });
    });
</script>

