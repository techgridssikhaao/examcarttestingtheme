<!-- row-products.liquid -->
<style>
  /* theme.scss.liquid (or your custom CSS file) */

  .row-products {
    display: flex;
    flex-wrap: wrap;
  }

  .product-item {
    width: 25%; /* Adjust as needed to show the desired number of products per row */
    padding: 10px;
    box-sizing: border-box;
  }

  .product-item img {
    max-width: 100%;
  }
</style>
<section class="row-products">
  <p>iehriuewirye2ifiwefuygrewuguwgfuywgufygewufuwefuifbdsauhbcuwdfuw</p>
  <div class="product-row">
    {% for product in collections.first %}
      <div class="product-item">
        <a href="{{ product.url }}">
          <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
          <h3>{{ product.title }}</h3>
          <p>{{ product.price | money }}</p>
        </a>
      </div>
    {% endfor %}
  </div>
</section>
