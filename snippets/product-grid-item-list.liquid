{% unless current_collection %}
{% assign current_collection = collection %}
{% endunless %}

{% assign on_sale = false %}
{% if product.compare_at_price > product.price %}
{% assign on_sale = true %}
{% endif %}

{% assign sold_out = true %}
{% if product.available  %}
{% assign sold_out = false %}
{% endif %}

{% comment %}Select the product image size from settings.{% endcomment %}
{% assign img_size = settings.img_size_grid %}
<div class="product-layout list-style  {% if c == true %} product-customize {% endif %}">
  <div class="product-thumb transition">
    <div class="item">
      <div class="item-inner">
        <div class="image images-container">
          {% if section.settings.product_grid_img_carousel == true %}
          <div id="myCarousel{{ section.id }}-{{product.id}}" class="carousel slide img-other" data-ride="carousel" data-interval="false">
            <!-- product inside carousel -->
            <div class="carousel-inner" role="listbox">
              {% for image in product.images %}
              <div class="item {% if forloop.first == true %}active{% endif %}">
                <a class="product-image" title="{{ product.title }}" href="{{ product.url | within: collection }}">
                  <img class="img-responsive lazy" src="{{ image.src | img_url: img_size }}" alt="">
                </a>
              </div>
              {% endfor %}
            </div>
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel{{ section.id }}-{{product.id}}" role="button" data-slide="prev">
              <i class="fa fa-angle-left"></i>
              <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel{{ section.id }}-{{product.id}}" role="button" data-slide="next">
              <i class="fa fa-angle-right"></i>
              <span class="sr-only">Next</span>
            </a>
          </div>
          {% else %}
          <a href="{{ product.url }}" class="product-image">
            <img class="img-responsive has-rotator img-default-image img-cate-{{product.id}}{% if section %}-{{section.id}}{%endif %}" src="{{ product.featured_image.src | img_url: img_size }}" alt="{{ product.featured_image.alt | escape }}">
            {% if settings.hide_hover != true %}
            <img class="img-r" src="{{ product.images.last | product_img_url: img_size }}" alt="{{ product.images.last.alt | escape }}">
            {% endif %}
            {% if settings.grid_color_swatches != 'false' %}
            {% if product.available and product.variants.size > 1 %}
            {% include 'swatch-grid-img' with 'Color'  %}
            {% endif %}
            {% endif %}
          </a>
          {% endif %}
          {% if section.settings.product_grid_img_carousel == false %}
          {% if settings.grid_color_swatches != 'false' %}
          {% if product.available and product.variants.size > 1 %}
          {% include 'swatch-grid' with 'Color' %}
          {% endif %}
          {% endif %}
          {% endif %}
          <div class="box-label"></div>
        </div>
        <!-- image -->
        <div class="caption">
          <div class="inner {% if settings.grid_color_swatches != 'false' and section.settings.product_grid_img_carousel != true %} swtch{% endif %}">
            {% if settings.grid_vendor_enable %}
            <p class="manufacture-product">
              {{ product.vendor | link_to_vendor }}
            </p>
            {% endif %}
            <h4 class="product-name">
              <a href="{{ product.url | within: collection }}">
                {% if settings.limit_title_words == true %}{{ product.title | truncatewords:settings.limit_title_words_count, "" }}{% else %}{{ product.title }}{% endif %}
              </a>
            </h4> 
            {% if settings.hide_review != true %}
            <div class="ratings">
              <div class="rating-box">
                {% include 'review' %}
              </div>
            </div>
            {% endif %}
               {% include 'product_label' %}
            {% include 'price' %}
            <!-- price-container -->
            {% include 'product_label' %}
          </div>
        </div>
        <!-- caption -->
      </div>
    </div>
  </div>
  <!-- product-thumb -->
</div>
<!-- product-layout -->